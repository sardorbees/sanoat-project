{
  "info": {
    "name": "Django Reset Password via Email",
    "_postman_id": "a71b1a84-38f7-4fee-91ea-7fd18d3f1121",
    "description": "Reset password, verify code, set new password",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Send Reset Code",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"test@gmail.com\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/reset/send-code/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["reset", "send-code", ""]
        }
      }
    },
    {
      "name": "Verify Code",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"test@gmail.com\",\n    \"code\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/reset/verify-code/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["reset", "verify-code", ""]
        }
      }
    },
    {
      "name": "Set New Password",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"test@gmail.com\",\n    \"new_password\": \"NewPass123\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/reset/new-password/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["reset", "new-password", ""]
        }
      }
    }
  ]
}
